{
    "manifest_version": 3,
    "name": "Amazon Product Extractor",
    "version": "1.0",
    "permissions": ["activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    
    "content_scripts": [
    {
        "matches": ["*://www.amazon.in/*","*://www.flipkart.com/*","*://www.zara.com/*"],
        "js": ["content.js"]
    }
],

    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }


  